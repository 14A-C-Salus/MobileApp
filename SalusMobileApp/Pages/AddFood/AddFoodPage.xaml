<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="SalusMobileApp.Pages.AddFood.AddFoodPage"
             Title="AddFoodPage">
    <VerticalStackLayout>
        <Label Text="Protein:"/>
        <Entry x:Name="proteinEntry"/>
        
        <Label Text="Kcal:"/>
        <Entry x:Name="kcalEntry"/>
        
        <Label Text="Carbohydrate:"/>
        <Entry x:Name="carbohydrateEntry"/>

        <Button x:Name="addFoodButton" Clicked="addFoodButton_Clicked" Text="Save food" WidthRequest="50" HeightRequest="40" Margin="0, 0, 0, 10"/>
        <Button x:Name="enableScannerButton" Clicked="enableScannerButton_Clicked" Text="Scan barcode" WidthRequest="50" HeightRequest="40"/>
    </VerticalStackLayout>
</ContentPage>