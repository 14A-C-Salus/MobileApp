<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalusMobileApp.Pages.Error.ErrorPage"
             Title="ErrorPage" NavigationPage.HasBackButton="False" NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout>
        <Label 
            Text="ERROR:"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label x:Name="errorMessageLabel"/>
        <Button x:Name="backToLoginButton" Clicked="backToLoginButton_Clicked" Text="Back to Login"/>
    </VerticalStackLayout>
</ContentPage>