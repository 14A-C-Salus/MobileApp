<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalusMobileApp.Pages.Login_Signup.ForgotPasswordPage"
             Title="ForgotPasswordPage" NavigationPage.HasBackButton="False" NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout WidthRequest="250">
        <Label Text="Did you forget your password?" FontSize="Header"/>
        <Label Text="Email:"/>
        <Entry x:Name="emailEntry"/>
        <Button x:Name="forgottenPasswordButton" Clicked="forgottenPasswordButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>