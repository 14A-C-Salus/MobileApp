<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalusMobileApp.Pages.Login_Signup.ResetPasswordPage"
             Title="ResetPasswordPage">
    <VerticalStackLayout>
        <Label Text="You can reset your password below! Make sure to remember it next time!"/>
        <Label Text="Password:"/>
        <Entry x:Name="passwordEntry"/>
        <Label Text="Confirm password:"/>
        <Entry x:Name="confirmPasswordEntry"/>
        <Button x:Name="resetPasswordButton" Clicked="resetPasswordButton_Clicked" Text="Reset password"/>
        <Button x:Name="backToLogin" Clicked="backToLogin_Clicked" Text="Back to login"/>
    </VerticalStackLayout>
</ContentPage>